{
  "version": 2,
  "builds": [
    {
      "src": "namecard/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "namecard/build"
      }
    },
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "installCommand": "yarn install",
  "buildCommand": "yarn build",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/namecard/build/$1"
    }
  ]
}
